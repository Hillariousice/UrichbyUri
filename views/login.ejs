<body class="container">

<header>
  <%- include('./partials/header'); %>
</header>
<div>
  <div class="login">
    <h1>Welcome To Urich By Uri</h1>
    <p>Login your details here.</p>

    <form class="login-form" method="post"action="/users/login" enctype="application/x-www-form-urlencoded">

      <div class="form-group mb-1">
        <input name="email"placeholder=" Email" value=""/>
        <div class="emailError"></div>
    </div>
        <div class='form-group mb-1'>
            <label htmlFor="pass"class="form-label"></label> <br/>
            <input type="password" id="pass" placeholder="Enter your Password" name="password" onChange={handleChange} />
        </div>

        <div class="form-group mb-1">
          <input type="submit" value="login"/>
      </div>
    </form>
    <p> Don't have an account <a href="/users/register"> Sign Up</a></p>
    <a href="/users/forgetpassword"> Forget password</a>
  </div>
</div>

<footer>
  <%- include('./partials/footer'); %>
</footer>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
